# Metrics System Configuration
# Copy these variables to your .env file and adjust values as needed

# =============================================================================
# METRICS SYSTEM ENABLED/DISABLED
# =============================================================================
METRICS_ENABLED=true

# =============================================================================
# BUFFER AND FLUSH SETTINGS
# =============================================================================
# Number of metrics to buffer before flushing (10-1000)
METRICS_BUFFER_SIZE=100
# Flush interval in milliseconds (1000-300000, default: 60000 = 1 minute)
METRICS_FLUSH_INTERVAL=60000

# =============================================================================
# NEW RELIC INTEGRATION
# =============================================================================
# Enable/disable New Relic metrics sending
METRICS_NEW_RELIC_ENABLED=true
# New Relic specific buffer size
METRICS_NEW_RELIC_BUFFER_SIZE=50

# =============================================================================
# METRICS ENDPOINTS
# =============================================================================
# Enable/disable metrics endpoints
METRICS_ENDPOINT_ENABLED=true
# Require authentication for metrics endpoints
METRICS_ENDPOINT_AUTH_REQUIRED=true
# Metrics endpoint paths
METRICS_ENDPOINT_PATH=/metrics
METRICS_SUMMARY_PATH=/metrics/summary
METRICS_HEALTH_PATH=/metrics/health

# =============================================================================
# METRICS MIDDLEWARE
# =============================================================================
# Enable/disable metrics middleware
METRICS_MIDDLEWARE_ENABLED=true
# Track HTTP request metrics
METRICS_MIDDLEWARE_TRACK_REQUESTS=true
# Track user activity in requests
METRICS_MIDDLEWARE_TRACK_USER_ACTIVITY=true
# Track performance metrics in requests
METRICS_MIDDLEWARE_TRACK_PERFORMANCE=true

# =============================================================================
# STORAGE METRICS
# =============================================================================
# Track storage operations
METRICS_STORAGE_TRACK_OPERATIONS=true
# Track storage errors
METRICS_STORAGE_TRACK_ERRORS=true
# Track storage performance
METRICS_STORAGE_TRACK_PERFORMANCE=true

# =============================================================================
# USER ACTIVITY METRICS
# =============================================================================
# Track authentication activities
METRICS_USER_ACTIVITY_TRACK_AUTH=true
# Track document operations
METRICS_USER_ACTIVITY_TRACK_DOCUMENTS=true
# Anonymize user IDs for privacy
METRICS_USER_ACTIVITY_ANONYMIZE=true

# =============================================================================
# PERFORMANCE THRESHOLDS (in milliseconds)
# =============================================================================
# Warning threshold for performance metrics
METRICS_PERFORMANCE_WARNING_THRESHOLD=1000
# Critical threshold for performance metrics
METRICS_PERFORMANCE_CRITICAL_THRESHOLD=5000

# =============================================================================
# ERROR RATE THRESHOLDS (in percentage)
# =============================================================================
# Warning threshold for error rates (0-100)
METRICS_ERROR_RATE_WARNING_THRESHOLD=5.0
# Critical threshold for error rates (0-100)
METRICS_ERROR_RATE_CRITICAL_THRESHOLD=20.0

# =============================================================================
# SUCCESS RATE THRESHOLDS (as decimal)
# =============================================================================
# Warning threshold for success rates (0-1)
METRICS_SUCCESS_RATE_WARNING_THRESHOLD=0.95
# Critical threshold for success rates (0-1)
METRICS_SUCCESS_RATE_CRITICAL_THRESHOLD=0.80

# =============================================================================
# USER ACTIVITY THRESHOLDS (in percentage)
# =============================================================================
# Warning threshold for user activity (0-100)
METRICS_USER_ACTIVITY_WARNING_THRESHOLD=1.0
# Critical threshold for user activity (0-100)
METRICS_USER_ACTIVITY_CRITICAL_THRESHOLD=0.1

# =============================================================================
# LOGGING
# =============================================================================
# Enable/disable metrics logging
METRICS_LOGGING_ENABLED=true
# Logging level: error, warn, info, debug
METRICS_LOGGING_LEVEL=info

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
# Enable development mode (additional logging, relaxed thresholds)
METRICS_DEV_MODE=false
# Enable test mode (mock metrics, no external calls)
METRICS_TEST_MODE=false

# =============================================================================
# EXAMPLES FOR DIFFERENT ENVIRONMENTS
# =============================================================================

# Development Environment (more verbose, relaxed thresholds)
# METRICS_LOGGING_LEVEL=debug
# METRICS_DEV_MODE=true
# METRICS_PERFORMANCE_WARNING_THRESHOLD=2000
# METRICS_PERFORMANCE_CRITICAL_THRESHOLD=10000

# Production Environment (minimal logging, strict thresholds)
# METRICS_LOGGING_LEVEL=warn
# METRICS_DEV_MODE=false
# METRICS_PERFORMANCE_WARNING_THRESHOLD=500
# METRICS_PERFORMANCE_CRITICAL_THRESHOLD=2000

# Testing Environment (mock everything, no external calls)
# METRICS_TEST_MODE=true
# METRICS_NEW_RELIC_ENABLED=false
# METRICS_ENDPOINT_ENABLED=false
# METRICS_MIDDLEWARE_ENABLED=false
